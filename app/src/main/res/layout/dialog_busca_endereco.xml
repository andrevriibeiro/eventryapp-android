<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/normal_margin">

    <EditText
        android:id="@+id/edit_text_endereco"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_backgroud"
        android:hint="@string/endereÃ§o"
        android:paddingLeft="20dp"
        android:scrollHorizontally="true"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linear_numero"
        android:layout_below="@+id/edit_text_endereco"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edit_text_bairro"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/edit_text_backgroud"
            android:layout_weight="1"
            android:ellipsize="end"
            android:paddingLeft="20dp"
            android:gravity="left|center_vertical"
            android:hint="@string/bairro"
            android:singleLine="true"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edit_text_numero"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="@string/numero_endereco"
            android:inputType="number"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_text_backgroud"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edit_text_cidade"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/linear_numero"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_backgroud"
        android:hint="@string/cidade"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <Button
        android:id="@+id/button_salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/edit_text_cidade"
        android:background="@color/blue_dark"
        android:text="@string/salvar"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_cancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button_salvar"
        android:background="@color/blue_dark"
        android:text="@string/cancelar"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size"
        android:textStyle="bold" />

</RelativeLayout>