<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_evento"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/small_margin"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/normal_elevation"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/image_view_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/text_view_nome_evento"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_avatar" />

        <TextView
            android:id="@+id/text_view_nome_convidado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/image_view_card"
            android:layout_toRightOf="@+id/image_view_card"
            android:text="Geladeira"
            android:textColor="#212121"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_status_confirmacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_nome_convidado"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/image_view_card"
            android:layout_toRightOf="@+id/image_view_card"
            android:text="Confirmado"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent"
            android:textSize="12dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>