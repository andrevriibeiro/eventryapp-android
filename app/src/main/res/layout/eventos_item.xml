<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_evento"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/small_margin"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/normal_elevation"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/image_view_card"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_view_nome_evento"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_event" />

        <TextView
            android:id="@+id/text_view_nome_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/image_view_card"
            android:layout_toRightOf="@+id/image_view_card"
            android:text="Festa no Apê"
            android:textColor="#212121"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_descricao_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_nome_evento"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/image_view_card"
            android:layout_toRightOf="@+id/image_view_card"
            android:text="Festa no Apartamento do André em Comemocação ao aniversário"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/text_view_data_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_descricao_evento"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/image_view_card"
            android:layout_toRightOf="@+id/image_view_card"
            android:text="10/10/2018 ás 20:00"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/text_view_local_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/image_view_card"
            android:layout_toRightOf="@+id/image_view_card"
            android:text="Campinas - SP"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#727272"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/image_view_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="290dp"
            android:src="@mipmap/ic_trash" />
    </RelativeLayout>
</android.support.v7.widget.CardView>